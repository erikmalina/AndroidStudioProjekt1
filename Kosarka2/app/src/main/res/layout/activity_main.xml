<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.kosarka.MainActivity"
    android:paddingTop="65dp"
    android:orientation="vertical"
    android:layout_weight="0"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:textSize="25dp"
                android:text="DomaÄ‡i:"
                android:textColor="#2196f3"
                />

            <TextView
                android:id="@+id/domaci_rezultat"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:textSize="25dp"
                android:text="0"
                android:textColor="#2196f3"
                />

            <Button
                android:id="@+id/trica_rezultat"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3"
                android:onClick="trica_domaci"
                android:background="#FFEA00"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                />

            <Button
                android:id="@+id/dva_rezultat"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2"
                android:onClick="dva_domaci"
                android:background="#D50000"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                />

            <Button
                android:id="@+id/Slobodno_rezultat"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slobodno bacanje"
                android:onClick="slobodni_domaci"
                android:layout_marginTop="16dp"
                android:background="#43A047"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

        </LinearLayout>





        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:textSize="25dp"
                android:text="Gosti:"
                android:textColor="#2e7d32"
                />

            <TextView
                android:id="@+id/gosti_rezultat"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:textSize="25dp"
                android:text="0"
                android:textColor="#2e7d32"
                />

            <Button
                android:id="@+id/trica_rezultatGosti"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3"
                android:onClick="trica_gosti"
                android:background="#D50000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

            <Button
                android:id="@+id/dva_rezultatGosti"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2"
                android:onClick="dva_gosti"
                android:background="#FFEA00"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

            <Button
                android:id="@+id/Slobodno_rezultatGosti"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slobodno bacanje"
                android:onClick="slobodno_gosti"
                android:layout_marginTop="16dp"
                android:background="#FF4081"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/reset"
        android:layout_weight="0"
        android:text="Reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="reset"
        android:layout_marginTop="16dp"
        android:background="#FF9800"/>

</LinearLayout>